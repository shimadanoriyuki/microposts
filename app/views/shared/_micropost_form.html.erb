<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "新しく投稿しましょう", class: 'form-control' %>
  </div>
  <div class="field text-right mb10">
    <span class="btn btn-default btn-file">
     <span class="glyphicon glyphicon-picture" aria-hidden="true"></span> 画像アップロード<%= f.file_field :image, class: 'form-control' %>
    </span>
  </div>
  <%= f.hidden_field :image_cache %>
  <%= f.submit "投稿", class: "btn btn-primary" %>
<% end %>