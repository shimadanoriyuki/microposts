<section class="user_info">
  <h1 class="clearfix">
    <% if @user.avatar? %>
    <%= link_to image_tag(@user.avatar_url(:thumbnail), alt: @user.name, class: "gravatar", size: "50"), @user %>
    <% else %>
    <%= gravatar_for @user %>
    <% end %>
    <%= @user.name %>
    <span class="links"><%= link_to "投稿", user_path %>｜<%= link_to "フォロー", followings_user_path(@user) %>｜<%= link_to "フォロワー", followers_user_path(@user) %></span>
  </h1>
  <table class="table">
    <tbody>
      <tr>
        <th>住所</th>
        <td><%= @user.location %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @user.tel %></td>
      </tr>
      <tr>
        <th>自己紹介文</th>
        <td><%= @user.contents %></td>
      </tr>
    </tbody>
  </table>
</section>